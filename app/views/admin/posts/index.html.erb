<%#= render 'searches/form' %>


<h1><b>町　紹　介</b></h1>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <% @posts.each do |post| %>
        <%= render 'look', post: post %>
        <!--<p>コメント件数：<%#= post.post_comments.count %></p>-->
        <div style="display: flex; justify-content: flex-end; margin-top: auto;">
          <%= link_to '詳細を見る', admin_post_path(post.id) %><br>
          <%= link_to "削除", admin_post_path(post), method: :delete %>
          <td>
           <% if post.category.present? %>
            <%= link_to post.category,tagsearches_search_path(content:@post.category) %>
           <% end %>
          </td>
        </div>
      <% end %>
    </div>
  </div>

<%= link_to '新規投稿', new_admin_post_path %>
<%= render 'admin/maps/look', maps: @maps %>
