<%#= render 'form', post: @post %>
<div class="container-fluid">
<%= form_with model: @post, url: public_post_path, method: :patch do |f| %>
<center>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, style: "width: 70%; padding: 5px 10px;", class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, style: "width: 70%; padding: 5px 10px;", class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  </center>
<% end %>
</div>
