<div class="container-fluid">

<%= form_with model: post, url: public_posts_path do |f| %>
 <center>
  <div class="form-group">
    <h3><%= f.label :title %></h3><br>
    <%= f.text_field :title, style: "width: 70%;", class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <h4><%= f.label :image %></h4><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <h4><%= f.label :body %></h4><br>
    <%= f.text_area :body, style: "width: 70%;", class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
 </center>
<% end %>

</div>
